<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_param_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:layout_marginTop="16dp"
	        android:text="Views"
	        android:textAppearance="@android:style/TextAppearance.Large"
	        android:textColor="@color/apptheme_main" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/card_status_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/card_status_apprentice_parent"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/selector_background_neutral"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_status_apprentice_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/apprentice" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/txt_config"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Group"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="80dp"
            android:background="@color/separator_light" />

        <LinearLayout
            android:id="@+id/card_status_guru_parent"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/selector_background_neutral"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/guru" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/txt_visual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Cells"
                    android:textColor="@color/text_gray"
                    android:textSize="18sp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>