<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmv.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xmv.activity.MainActivity"></activity>
        
        <activity
            android:name="com.xmv.preference.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="com.xmv.activity.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xmv.activity.MainActivity" />
        </activity>
        
        <activity
            android:name="com.xmv.activity.GroupActivity"
            android:windowSoftInputMode="adjustPan" />
        
        <activity
            android:name="com.xmv.activity.GroupListViewActivity"
            android:windowSoftInputMode="adjustPan" />
        
        <activity
            android:name="com.xmv.activity.ParametersListViewActivity"
            android:windowSoftInputMode="adjustPan" />
        
        <activity
            android:name="com.xmv.activity.CellsViewActivity"
            android:windowSoftInputMode="adjustPan" />
        
        <activity
            android:name="com.xmv.activity.SingleCellActivity"
            android:windowSoftInputMode="adjustPan" />
        
    </application>

</manifest>
